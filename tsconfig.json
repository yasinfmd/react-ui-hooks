{
  "compilerOptions": {
    "target": "es2021",
    "diagnostics": false,
    "module": "commonjs",
    "lib": ["dom", "esnext"],
    "declaration": true,
    "declarationMap": true,
    "jsx": "react-jsx",
    "noEmit": true,
    "strict": true,
    "pretty": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": "./",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "skipLibCheck": true,
    "paths": {
      "src/*": ["src/*"]
    }
  },
  "exclude": ["node_modules","src/stories"]
}
